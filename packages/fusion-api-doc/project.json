{
    "name": "fusion-api-doc",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "doc",
    "sourceRoot": "packages/fusion-api-doc",
    "targets": {
      "gen-apib": {
        "executor": "nx:run-commands",
        "defaultConfiguration": "rest-api-v1",
        "options": {
          "color": true,
          "parallel": true
        },
        "configurations": {
          "rest-api-v1": {
            "command": "aglio -i src/rest.v1.apib -o dist/rest.v1.html"
          }
        }
      }
    }
  }