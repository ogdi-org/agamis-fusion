{
  "name": "fusion-explorer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "packages/fusion-explorer/src",
  "i18n": {
    "sourceLocale": "en-US",
    "locales": {
      "fr-FR": "packages/fusion-explorer/src/locales/messages.fr-FR.xlf"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/fusion-explorer",
        "index": "packages/fusion-explorer/src/index.html",
        "main": "packages/fusion-explorer/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "packages/fusion-explorer/tsconfig.app.json",
        "assets": [
          "packages/fusion-explorer/src/favicon.ico",
          "packages/fusion-explorer/src/assets"
        ],
        "styles": [
          "packages/fusion-explorer/src/styles.css"
        ],
        "scripts": [],
        "stylePreprocessorOptions": {
          "includePaths": [
            "packages/fusion-explorer/src/styles"
          ]
        },
        "i18nMissingTranslation": "error"
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all",
          "fileReplacements": [
            {
              "replace": "packages/fusion-explorer/src/environments/environment.ts",
              "with": "packages/fusion-explorer/src/environments/environment.prod.ts"
            }
          ]
        },
        "en-US": {
          "localize": [
            "en-US"
          ]
        },
        "fr-FR": {
          "localize": [
            "fr-FR"
          ]
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "fusion-explorer:build:production"
        },
        "development.en-US": {
          "browserTarget": "fusion-explorer:build:development,en-US"
        },
        "development.fr-FR": {
          "browserTarget": "fusion-explorer:build:development,fr-FR"
        }
      },
      "defaultConfiguration": "development.en"
    },
    "gen-data": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "all",
      "options": {
        "cwd": "packages/fusion-explorer/src/mocks/data"
      },
      "configurations": {
        "all": {
          "commands": [
            "nx run fusion-explorer:gen-data:organizations",
            "nx run fusion-explorer:gen-data:profiles",
            "nx run fusion-explorer:gen-data:users"
          ]
        },
        "organizations": {
          "command": "synth generate collections/organizations | jq > dist/organizations.json"
        },
        "profiles": {
          "command": "synth generate collections/profiles | jq > dist/profiles.json"
        },
        "users": {
          "command": "synth generate collections/users | jq > dist/users.json"
        }
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "fusion-explorer:build",
        "outputPath": "packages/fusion-explorer/src/locales"
      }
    },
    "gen-i18n": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/fusion-explorer",
        "command": "xliffmerge --profile xliffmerge.json fr-FR"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/fusion-explorer/**/*.ts",
          "packages/fusion-explorer/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/fusion-explorer/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "serve-static": {
      "executor": "@nrwl/web:file-server",
      "options": {
        "buildTarget": "fusion-explorer:build"
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "packages/fusion-explorer/.storybook",
        "browserTarget": "fusion-explorer:build",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": [
        "{options.outputDir}"
      ],
      "options": {
        "outputDir": "dist/storybook/fusion-explorer",
        "configDir": "packages/fusion-explorer/.storybook",
        "browserTarget": "fusion-explorer:build",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "static-storybook": {
      "executor": "@nrwl/web:file-server",
      "options": {
        "buildTarget": "fusion-explorer:build-storybook",
        "staticFilePath": "dist/storybook/fusion-explorer"
      },
      "configurations": {
        "ci": {
          "buildTarget": "fusion-explorer:build-storybook:ci"
        }
      }
    }
  }
}